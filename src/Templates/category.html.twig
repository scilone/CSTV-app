{% extends "base.html.twig" %}

{% block body %}
    <ul>
        {% set catLength = 1 %}
        <a href="{{ baseUrlAbsolute }}/streams/{{ type }}/all"><li>ALL</li></a>

    {% if type == 'movie' %}
        {% set catLength = 2 %}
        <a href="{{ baseUrlAbsolute }}/streams/{{ type }}/recently"><li>RECENTLY ADDED</li></a>
    {% endif %}

    {% for category in categories %}
        <a href="{{ baseUrlAbsolute }}/streams/{{ type }}/{{ category.id }}/{{ category.name }}"><li>{{ category.name }}</li></a>
        {% set catLength = catLength + 1 %}
    {% endfor %}
    </ul>

    <style>
        ul {
            list-style-type:none;
            padding: 3em;
            -webkit-columns: 2;
            -moz-columns: 2;
            columns: 2;
        }

        li {
            background: white;
            margin-bottom: 2px;
            padding: 5px;
            opacity: 0.6;
        }

        a:focus > li{
            font-weight: bold;
            border: medium solid #e8b12c;
        }

        a:nth-child({{ (catLength/2)|round(0, 'ceil') }}) li {
            margin-bottom: 5em;
        }
    </style>
{% endblock %}
